<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.youssefalaa.musicstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Now_Playing"
            android:label="@string/NowPlaying" />
        <activity android:name=".Albums"
            android:label="@string/Albums"/>
        <activity android:name=".playLists"
            android:label="@string/PlayListis"/>
        <activity android:name=".buyOnline"
            android:label="@string/Search">
        </activity>
    </application>

</manifest>